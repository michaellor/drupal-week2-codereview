<?php

function shift_cipher_menu() {
    $items = array();
    $items['shift_cipher'] = array(
        'title' => 'Shift Cipher',
        'page callback' => 'drupal_get_form',
        'page arguments' => array('shift_cipher_form'),
        'access callback' => TRUE,
        'type' => MENU_NORMAL_ITEM,
    );
    $items['shift_cipher_success_page'] = array(
        'title' => 'Coded Results',
        'page callback' => 'shift_cipher_sucess',
        'access callback' => TRUE,
        'type' => MENU_CALLBACK,
    );
    return $items;
}

function shift_cipher_form() {
    $form['user_input'] = array(
        '#title' => 'User Input',
        '#type' => 'textfield',
        '#description' => t('Enter a message to encode.'),
    );
    $form['shift_direction'] = array(
        '#title' => 'Shift Direction',
        '#type' => 'textfield',
        '#description' => t('Enter a direction. (right or left)'),
    );
    $form['shift_spaces'] = array(
        '#title' => 'Shift Spaces',
        '#type' => 'textfield',
        '#description' => t('Enter the number of spaces to shift.'),
    );
    $form['submit'] = array(
        '#type' => 'submit',
        '#value' => 'Encode Message!',
    );
    return $form;
}
